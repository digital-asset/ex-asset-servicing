module RefData.EqOption where

import Types

data OptionType = Put | Call deriving (Eq, Show)

template EqOption
  with
    instrumentId    : Id
    underlying      : Id
    optionType      : OptionType
    strike          : Decimal
    contractSize    : Decimal
    maturity        : Date
    obs             : [Party]
  where
    signatory instrumentId.host
    observer obs
    
    key instrumentId : Id
    maintainer key.host
